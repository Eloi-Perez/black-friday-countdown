---
  import Nav from '../components/Nav.astro';
  import Footer from '../components/Footer.astro';

  export interface Props {
    title: string;
  }

  const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <!-- <link rel="icon" type="image/x-icon" href="/favicon.ico" /> -->
  <title>{title}</title>
</head>

<body>
  <Nav />
  <slot />
  <Footer />
</body>

</html>

<style>
  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.5rem);
    --font-size-lg: clamp(1.2rem, 1vw + 1.2rem, 3rem);
    --font-size-xl: clamp(2.44rem, 2vw + 1.85rem, 6rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(10, 21%, 95%);
    --color-border: hsl(0, 0%, 67%);
  }

  @font-face {
    font-family: "Futura";
    src: url("/fonts/FuturaPTMedium.woff2");
    font-weight: 400;
  }

  @font-face {
    font-family: "Futura";
    src: url("/fonts/FuturaPTBold.woff2");
    font-weight: 700;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: "Futura", sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
    overflow-x: hidden;
    height: 100%;

  }

  body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  :global(h1) {
    font-size: var(--font-size-xl);
  }

  :global(h2) {
    font-size: var(--font-size-lg);
  }
</style>